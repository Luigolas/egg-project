<?xml version="1.0" encoding="utf-8" ?>
<c2eventsheet>
    <!--All the 'name' attributes are ignored by Construct 2 - they are there for readability only.-->
    <name>Event sheet 1</name>
    <events>
        <event-block>
            <conditions>
                <condition id="-6" name="Every X seconds" type="System">
                    <param id="0" name="Interval (seconds)">5</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="Flash" id="0" name="Flash" type="Text">
                    <param id="0" name="&apos;On&apos; time">1</param>
                    <param id="1" name="&apos;Off&apos; time">0.5</param>
                    <param id="2" name="Duration">5</param>
                </action>
            </actions>
        </event-block>
        <event-block>
            <conditions>
                <condition id="1" name="On any key pressed" type="Keyboard" />
            </conditions>
            <actions />
        </event-block>
        <event-block>
            <conditions>
                <condition id="-1" name="Compare X" type="GIF">
                    <param id="0" name="Comparison">5</param>
                    <param id="1" name="X co-ordinate">Sprite5.X</param>
                </condition>
            </conditions>
            <actions>
                <action behavior="Pin" id="0" name="Pin to object" type="Sprite5">
                    <param id="0" name="Pin to">GIF</param>
                </action>
            </actions>
        </event-block>
    </events>
</c2eventsheet>
